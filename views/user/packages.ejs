                <button type="button" class="btn btn-sm btn-danger px-3" style="border-radius: 30px 0px 30px 0;"> Close</button>
              <a href="#booking-section">  <button type="button" class="btn btn-sm btn-primary px-3" style="border-radius: 30px 0px 30px 0;">Book Now</button></a>
            </div>
        </div>
