// Function to Open Modal
function openModal() {
    document.getElementById("passengerModal").style.display = "flex";
    document.body.classList.add("modal-open"); // Prevents page scroll
}

// Function to Close Modal
function closeModal() {
    document.getElementById("passengerModal").style.display = "none";
    document.body.classList.remove("modal-open"); // Restores page scroll
}

// Close Modal when clicking outside of it
window.onclick = function(event) {
    let modal = document.getElementById("passengerModal");
    if (event.target == modal) {
        closeModal();
    }
};

// Close Modal with Esc Key
document.addEventListener("keydown", function(event) {
    if (event.key === "Escape") {
        closeModal();
    }
});

