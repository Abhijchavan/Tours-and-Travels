<style> 
   
    .bus-card {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
    }

    .bus-info {
        flex: 2;
    }

    .bus-info h2 {
        margin: 0;
        font-size: 18px;
        font-weight: bold;
    }

    .bus-info p {
        font-size: 14px;
        margin: 4px 0;
    }

    .discount {
        color: red;
    }

    .bus-timing {
        flex: 2;
        display: flex;
        justify-content: space-between;
        text-align: center;
    }

    .bus-timing strong {
        font-size: 16px;
        font-weight: bold;
    }

    .duration {
        font-size: 14px;
        color: gray;
    }

   

    .rating {
        background: green;
        color: white;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 14px;
        display: flex;
        align-items: center;
    }

    .rating i {
        margin-right: 5px;
    }

    .bus-pricing {
        flex: 1.5;
        text-align: center;
    }

    .bus-pricing h3 {
        margin: 0 0;
        font-size: 20px;
        font-weight: bold;
    }

    .seats, .window-seats {
        font-size: 14px;
        color: gray;
    }

    .bus-offer {
     
     float: left;
        
        color: red;
        margin-left: 20%;
    }

    .bus-offer i {
        margin-right: 5px;
    }

    .bus-action {
        flex: 1;
        display: flex;
        justify-content: flex-end;
    }

    .view-seats {
        background: red;
        color: white;
        border: none;
        padding: 10px 16px;
        border-radius: 4px;
        font-size: 14px;
        cursor: pointer;
    }

    .view-seats:hover {
        background: darkred;
    }
</style> 

<script>
    $(document).ready(function() {
        var from = $("#from").val().toLowerCase();
        var to = $("#to").val().toLowerCase();

        $(".bus-item").hide();
        $(".bus-item").filter(function() {
            return $(this).data("from").toLowerCase() === from && $(this).data("to").toLowerCase() === to;
        }).show();
    });
</script>





