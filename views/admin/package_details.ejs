<br>
<div class="container  p-4 ">
    <h1 class=" text-center p-3">Package Desc List</h1> 
        <div class="row">
            <div class="col-md-12">
<table class="table table-bordered table-sm ">
    <tr>
        <th>Action</th>
        <th>Sr.No</th>
        <th>P_Location</th>
        <th>P_Days</th>
        <th>P_Person</th>
        <th>P_Price</th>
        <th>P_Desc</th>
        <th>S_image1</th>
        <th>S_image2</th>
        <th>S_image3</th>
    </tr>

    <% package_details.map((row,i)=>{ %>
        <tr>
            <td>
                    <a href="/admin/edit_package_details/<%-row.package_details_id %>" class="btn btn-primary">
                        edit
                    </a>
                
                    <a href="/admin/delete_package_details/<%-row.package_details_id %>" class="btn btn-danger" onclick="return confirm('Are You Sure...')">
                        delete
                    </a>
            </td>
            <td><%- i+1 %></td>
            <td><%- row.package_location %></td>
            <td><%- row.package_days %></td>
            <td><%- row.package_person %></td>
            <td><%- row.package_price %></td>
            <td><%- row.package_desc %></td>
            <td>
                <img src="/admin_assets/package_img/<%- row.slider_image1 %>" width="100px">
            </td>
			<td>
				<img src="/admin_assets/package_img/<%- row.slider_image2 %>" width="100px">
            </td>
			<td>
				<img src="/admin_assets/package_img/<%- row.slider_image3 %>" width="100px">
            </td>
        </tr>
        <% }) %>
</table>
</div>
</div>
</div>

</div>			
</div>			
