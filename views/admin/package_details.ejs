<%-include("navbar.ejs"); %>
<div class="row">
	<div class="col-12">
		<h1>Tours And Travels</h1>
			<form action="/admin/save_package_details" method="post" enctype="multipart/form-data">
				<div>
					<h1 class=" text-center p-3">Package details</h1>
					<div class="row">
                        <div class="col-md-4 mb-3">
							Enter Slider Image1
							<input type="file" name="slider_image1" class="form-control">   
						</div>
						<div class="col-md-4 mb-3">
							Enter Slider Image2
							<input type="file" name="slider_image2" class="form-control">   
						</div>
						<div class="col-md-4 mb-3">
							Enter Slider Image3
							<input type="file" name="slider_image3" class="form-control">   
						</div>
						<div class="col-md-4 mb-3">
							Location
							<input type="text" name="package_location" class="form-control">    
						</div>
						<div class="col-md-4 mb-3">
							days
							<input type="number" name="package_days" class="form-control">   
						</div>
						<div class="col-md-4 mb-3">
							person
							<input type="number" name="package_person" class="form-control"> 
						</div>
                        <div class="col-md-4 mb-3">
							price
							<input type="number" name="package_price" class="form-control"> 
						</div>
                        <div class="col-md-4 mb-3">
							Description
                            <textarea name="package_desc" class="form-control"></textarea> 
						</div>
                        <div class="col-md-12 mb-3" class="text-center">
							<button class="btn btn-lg btn-primary" type="submit">Save Slider</button>   
						</div>
		</form>
		


<!-- CREATE TABLE package_details(
	package_details_id INT PRIMARY KEY AUTO_INCREMENT,
	package_location TEXT,
