<%-include("navbar.ejs"); %>
<div class="row">
    <div class="col-12">
    <p class="h3 mb-3"><strong>Services Card</strong> Page Details</p>

    <form action="service_card_details" method="post" class="service_form" enctype="multipart/form-data">
   
    <h5>Services Card Title</h5>
    <input name="service_card_title" class="form-control" placeholder="Services Card Title" rows="4"></textarea>
    <br>
    
    <h5>Service Card Description</h5>
    <textarea name="service_card_description" class="form-control" placeholder="Service Card Description" rows="4"></textarea>
    <br>
    <button class="btn btn-primary btn-lg"> Submit</button>
    </form>


<table class="table table-striped table-hover mt-3 ">
    <tr>
        <th>Service Id</th>
        <th>Services Card Title</th>
        <th>Service Card Description</th>
        <th>Action</th>
    </tr>
    <% service_card_info.map(function(row, i) { %>
        <tr>
            <td><%= i+1 %></td>
           
            <td><%= row.service_card_title %></td>
            
            <td><%= row.service_card_description %></td>
       
     <td>
        <a href="/admin/service_edit/<%= row.service_card_id%>" class="btn btn-primary">Edit</a>
        <a href="/admin/service_card_delete/<%= row.service_card_id %>" class="btn btn-danger" 
           onclick="return confirm('Are you sure you want to delete this record?');">
           Delete
        </a>
    </td> 
  
</tr>
<% }) %>
</table>
<hr>
</div></div>

<%-include("footer.ejs"); %>


