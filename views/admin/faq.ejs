<%-include("navbar.ejs"); %>
<div class="row">
    <div class="col-12">
    <p class="h3 mb-3"><strong>faq</strong> Page Details</p>

    <form action="/admin/faq_details" method="post" class="faq_form" enctype="multipart/form-data">

        
    <h5>FAQ Question</h5>
  
    <input type="text" name="faq_question" class="form-control" placeholder="FAQ Question">
     <br>


    <h5>FAQ Answer</h5>
    <textarea name="faq_answer" class="form-control" rows="4"></textarea>
 
    <br>

    <button class="btn btn-primary btn-lg"> Submit</button>
    </form>


<table class="table table-striped table-hover mt-3 ">
    <tr>
        <th> FAQ Id</th>
        <th>FAQ Question</th>
      
        <th>FAQ Answer</th>
        
        <th>Action</th>
    </tr>
    <% faq_info.map(function(row, i) { %>
        <tr>
            <td><%= i+1 %></td>
           
            <td><%= row.faq_question %></td>
            
            <td><%= row.faq_answer %></td>
<td>
     <td>
  
        <a href="/admin/faq_delete/<%= row.faq_id %>" class="btn btn-danger" 
           onclick="return confirm('Are you sure you want to delete this record?');">
           Delete
        </a>
    </td> 
    
</td>   
</tr>
<% }) %>
</table>
<hr>
</div></div>

<%-include("footer.ejs"); %>

